<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Index">

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/myProfile"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_selector"
        android:drawableStart="@drawable/my_profile"
        android:drawablePadding="10dp"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/my_profile"
        android:textAllCaps="false"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName" />

    <Button
        android:id="@+id/volunteeringHistory"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/button_selector"
        android:drawableStart="@drawable/history"
        android:drawablePadding="10dp"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/volunteer_history"
        android:textAllCaps="false"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myProfile" />

    <Button
        android:id="@+id/volunteerManagement"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_selector"
        android:drawableStart="@drawable/history"
        android:drawablePadding="10dp"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/volunteer_management"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName" />

    <Button
        android:id="@+id/availabilityTime"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/button_selector"
        android:drawableStart="@drawable/time"
        android:drawablePadding="10dp"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/availability_time"
        android:textAllCaps="false"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volunteeringHistory" />

    <Button
        android:id="@+id/changePassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/button_selector"
        android:drawableStart="@drawable/password"
        android:drawablePadding="10dp"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/change_password"
        android:textAllCaps="false"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/availabilityTime" />

    <Button
        android:id="@+id/volunteeringTimeBtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/button_selector"
        android:drawableStart="@drawable/volunteering_time"
        android:drawablePadding="10dp"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/volunteering_time"
        android:textAllCaps="false"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePassword" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="104dp"
        android:layout_height="107dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/avatar"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar1" />
</androidx.constraintlayout.widget.ConstraintLayout>